{
  "name": "@gelatonetwork/cctp-sdk",
  "version": "0.1.0",
  "description": "SDK to integrate Gasless CCTP",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "rm -rf dist && npx tsc",
    "format:check": "prettier --check \"*/**/*.{js,json,md,ts}\"",
